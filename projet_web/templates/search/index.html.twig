<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link href="../public/favicon.ico" rel="icon" type="image/x-icon">

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block body %}

{% include "header.html.twig" %}


<div class="container">
    <div class="row">
        <div class="col-sm">
            {% if books is defined %}
                <h5>Livres</h5>
                {% for book in books %}
                    <div>
                    <h2>{{ book.titre }}</h2>
                    {% if vich_uploader_asset(book, 'fichierImage') is null %}
                        <a href="{{ path('app_livre_show_search' , {'id': book.id }) }}"><img src="{{ asset('images/couverture/default.jpg') }}" alt="Couverture de livre par dÃ©faut" /></a>
                    {% else %}
                        <a href="{{ path('app_livre_show_search' , {'id': book.id }) }}"><img src="{{ vich_uploader_asset(book, 'fichierImage')}}" style="width:20%;" alt="Couverture de livre"></a>
                    {% endif %}
                    </div>
                {% else %}
                    Pas de livres correspondant
                {% endfor %}
            {% endif %}
        </div>

        <div class="col-sm">
            <h5>Auteurs</h5>
            {% if authors is defined %}
                {% for author in authors %}
                    <div>
                    <a href="{{ path('app_auteur_show' , {'id': author.id }) }}">{{ author.nom }}</a>
                    </div>
                {% else %}
                    Pas d'auteurs correspondant
                {% endfor %}
            {% endif %}
        </div>

        <div class="col-sm">
            <h5>Utilisateurs</h5>
            {% if users is defined %}
                {% for user in users %}
                <div>
                <a href="{{ path('app_utilisateur_show' , {'id': user.id }) }}">{{ user.pseudo }}</a>
                </div>
                {% else %}
                    Pas d'utilisateurs correspondant
                {% endfor %}
            {% endif %}
        </div>

    </div>
</div>

{% include "footer.html.twig" %}
{% endblock %}
    </body>
</html>