{% extends 'base.html.twig' %}

{% block title %}{{livre.titre}}{% endblock %}

{% block body %}
    <h1>{{livre.titre}}</h1>

    <table class="table">
        <tbody>
            <tr>
                {% if route != 'app_livre_show_search' %}
                <th>Id</th>
                <td>{{ livre.id }}</td>
                {% endif %}
            </tr>
            <tr>
                <th>Couverture</th>
                <td>
                {% if vich_uploader_asset(livre, 'fichierImage') is null %}
                    <img src="{{ asset('images/couverture/default.jpg') }}" alt="Couverture de livre par dÃ©faut" /> 
                {% else %}
                    <img src="{{ vich_uploader_asset(livre, 'fichierImage')}}" style="width:20%;" alt="Couverture de livre">
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nombre de pages</th>
                <td>{{ livre.nbPages }}</td>
            </tr>
        </tbody>
    </table>

    
    {% if route == 'app_livre_showv' %}
        <a href="{{ path('app_livre_valider') }}">Retourner au catalogue de validation</a>
    {% else %}
        {% if route != 'app_livre_show_search' %}
            <p>{{ route }}</p>
            <a href="{{ path('app_livre_index') }}">Retourner au catalogue</a>
        {% endif %}
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
        <br>
        <a href="{{ path('app_livre_edit', {'id': livre.id}) }}">Modifier le livre</a>
        {{ include('livre/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
