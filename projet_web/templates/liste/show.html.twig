{% extends 'base.html.twig' %}

{% block title %}Liste{% endblock %}

{% block body %}
    {% include "header.html.twig" %}
    <h1>{{liste.nomListe}}</h1>

    <table class="table">
        <tbody>
            <ul>
                {% for livre in liste.idLivre %}
                    <li><a href="{{ path('app_livre_show', {'id': livre.id}) }}">{{ livre.titre }}</a></li>
                {% endfor %}
            </ul>
        </tbody>
    </table>

    {% if route == 'app_liste_show_profil' %}
        <a href="{{ path('app_profil') }}">Retourner au profil</a>
        <br>
        <a href="{{ path('app_liste_edit', {'id': liste.id}) }}">Modifier la liste</a>
        {{ include('liste/_delete_form.html.twig') }}
    {% endif %}
    {% if route == 'app_liste_show_user' %}
        <a href="{{ path('app_utilisateur_show', {'id': liste.idUtilisateur.id}) }}">Retourner au profil</a>
    {% endif %}
{% endblock %}
